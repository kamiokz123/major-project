<% layout('./layouts/boilerplate.ejs') -%>
<div class="row">
    <div class="col-8 offset-2">
    <h3>add new list</h3>
    <form action="/listings" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>

        <div class="mb-2">
            <label for="title" class="form-label">Title :</label>
            <input name="listing[title]" class="form-control" placeholder="enter title" type="text" required>
            <div class="invalid-feedback">enter valid title</div>
        </div>
        
        <div class="mb-2">
            <label for="description" class="form-label">Description :</label>
            <textarea name="listing[description]" class="form-control" placeholder="enter description" required></textarea>
        </div>

        <div class="mb-2">
            <label for="image" class="form-label">Upload Image:</label>
            <input name="listing[image]" class="form-control" type="file" >
        </div>

        <div class="mb-2">
            <label for="price" class="form-label">Price :</label>
            <input name="listing[price]" placeholder="enter price"  class="form-control" type="number" required>
        </div>
        
        <div class="mb-2">
            <label for="location" class="form-label">Location :</label>
            <input name="listing[location]" class="form-control" placeholder="enter location" type="text" required>
        </div>
        
        <div class="mb-2">
            <label for="country" class="form-label">Country :</label>
            <input name="listing[country]" placeholder="enter country" class="form-control" type="text" required>
        </div>
        <br>
        <button class="btn bt">Add</button>
    </form>
</div>
</div>